<!DOCTYPE html>
<html>
  <head>
    <title>EazyTunes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Welcome to Eazy-Tunes</h1>
    </header>

    <% if logged_in? %>
      <%= form_with url: session_url, method: "delete", local: true do |f| %>
        <%= f.submit value: "Sign Out" %>
      <% end %>
    <% else %>
      <%= link_to 'Sign Up', new_user_url %>
      <%= link_to 'Sign In', new_session_url %>
    <% end %>

    
    <% if flash[:errors] %>
      <%= flash[:errors].join(", ") %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
