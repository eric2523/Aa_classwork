<form action="<%= new_cat_url %>" method="POST">
    <label for="cat_name">Cat's Name: </label>
    <input type="text" name="cat[:name]" id="cat_name">
    <br>


    <label for="male_cat">Male:</label>
    <input type="radio" name="cat[:sex]" id="male_cat" value="M">
    <label for="female_cat">Female:</label>
    <input type="radio" name="cat[:sex]" id="female_cat" value="F">
    <br>

    <label for="cat_color">Choose a color:</label>
    <select name="cat[:color]" id="cat_color">
        <option value="" selected disabled>--Select a color--</option>
        <option value="Orange">Orange</option>
        <option value="White">White</option>
        <option value="Black">Black</option>
        <option value="Gray">Gray</option>
    </select>
    <br>

</form>